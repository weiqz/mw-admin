                </el-form-item>
                <el-form-item>
                    <el-button type="primary" @click="onSubmit">保存</el-button>
                </el-form-item>
            </el-form>
        </div>
        <div class="act">
            <h3>模块操作列表</h3>
            <table class="action_table" border="0" cellpadding="0" cellspacing="0">
                <tr style="background:#eee">
                    <td width="120">编号</td>
                    <td>操作名称</td>
                    <td>操作别名</td>
                    <td>操作排序</td>
                    <td width="120">操作</td>
                </tr>
                <tr v-for="act in action_list" :key="act.id">
                    <td>01111</td>
                    <td>
                        {{ act.action_name }}
                    </td>
                    <td>
                        {{ act.alias }}
                    </td>
                    <td>
                        {{ act.position }}
                    </td>
                    <td>
                        <div class="cell">
                            <a @click="edit_act(act)"> 修改 </a>
                            <a @click="del_act(act)"> 删除 </a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</template>

<script>
import { getActionList } from '../../api/permissions'
import { addAction } from '../../api/permissions'
import { updateAction } from '../../api/permissions'

    export default {
        props:{
            to_column:Object
        },
        computed: {
            tocol (){
                return this.to_column.column_name
            }
        },
        data (){
            return {
                saveFlag:'',
                form:{
                    id:'',
                    action_name:'',
                    action_fname:'',
                },
                input:'',
                value:'',
                value2:'',
                options:['Add','Edit','Del','Read'],
                options2:[1,2,3,4],
                action_list:[]
            }
        },
        created(){
            this.getList()
        },
        methods:{
            disStory (){
                Object.assign(this.$data, this.$options.data());
                this.getList()
            },
            onSubmit (){
                let resFn;
                if(this.saveFlag==='edit'){
                    resFn = updateAction({
                        id: this.form.id,
                        column_id:this.to_column.id,
                        action_name:this.form.action_name,
                        alias:this.form.action_fname
                    })
                }else{
                    resFn = addAction({
                        column_id:this.to_column.id,
                        action_name:this.form.action_name,
                        alias:this.form.action_fname
                    })
                }
                resFn.then((res) => {
                    console.log(res)
                    this.$emit('uplist');
                    this.getList()
                })
            },
            edit_act({action_name,alias,id}){
                this.saveFlag = 'edit';
                this.form.action_name = action_name;
                this.form.action_fname = alias;
                this.form.id = id;
            },
            del_act(){

            },
            getList(){
                getActionList({
                    id:this.to_column.id
                }).then((res) => {
                    if(res.code==='0'){
                        this.action_list = res.data
                    }
                })
            }
    }
}
</script>

